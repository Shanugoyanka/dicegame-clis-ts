{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["esnext"],
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "composite": false,
    "incremental": false,
    "rootDir": "src",
    "outDir": "lib",
    "baseUrl": "."
  },
  "include": ["src/**/*.ts", "../../shims.d.ts", "src/shims.d.ts"],
  "exclude": ["**/node_modules/*"]
}
